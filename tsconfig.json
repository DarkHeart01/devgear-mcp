{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "vscode"],
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode-test", "media", "out"]
}
